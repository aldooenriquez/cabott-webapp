<div class="w-full">
  <div class="pb-4">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <% content_for :title, "Users" %>

    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl">Users</h1>
      <%= link_to "New user", new_user_path, class: "ml-2 rounded-lg py-1.5 px-2.5 bg-blue-600 text-white block font-medium" %>
    </div>
  </div>

  <div id="users" class="min-w-full">
    <div class="relative overflow-x-auto dom_id voucher pb-2">
      <table class="w-full text-sm text-center text-gray-500">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Name
                </th>
                <th scope="col" class="px-6 py-3">
                    Role
                </th>
                <th scope="col" class="px-6 py-3">
                    Branch
                </th>
                <th scope="col" class="px-6 py-3">
                    Email
                </th>
                <th scope="col" class="px-6 py-3">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr class="bg-white border-b">
              <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                  <%= user.name %>
              </th>
              <td class="px-6 py-4">
                  <%= user.role %>
              </td>
              <td class="px-6 py-4 text-center"">
                <% if user.branch.present?%>
                  <%= user.branch.name %>
                <% end %>
              </td>
              <td class="px-6 py-4">
                  <%= user.email %>
              </td>
              <td class="px-6 py-4">
                  <%= link_to "Show this user", user, class: "rounded-lg py-1.5 px-2.5 bg-gray-100 inline-block font-medium" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
