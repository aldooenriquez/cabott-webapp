<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Branches" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Branches</h1>
    <%= link_to "New branch", new_branch_path, class: "ml-2 rounded-lg py-1.5 px-2.5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="branches" class="min-w-full">
    <% @branches.each do |branch| %>
      <%= render branch %>
      <p>
        <%= link_to "Show this branch", branch, class: "rounded-lg py-1.5 px-2.5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
