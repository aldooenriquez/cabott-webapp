<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Vouchers" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Vouchers</h1>
    <%= link_to "New voucher", new_voucher_path, class: "ml-2 rounded-lg py-1.5 px-2.5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="vouchers" class="min-w-full">
    <% @vouchers.each do |voucher| %>
      <%= render voucher %>
      <p>
        <%= link_to "Show this voucher", voucher, class: "rounded-lg py-1.5 px-2.5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
